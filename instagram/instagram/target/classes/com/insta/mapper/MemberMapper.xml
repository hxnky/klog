<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.insta.mapper.MemberMapper">

	<!-- 유저 전체 정보-->
	<resultMap id="memberResult"
		type="com.insta.domain.MemberVO">
		<id column="m_idx" property="m_idx" />
		<result column="email" property="email" />
		<result column="id" property="id" />
		<result column="name" property="name" />
		<result column="pw" property="pw" />
		<result column="profile_pic" property="profile_pic" />
	</resultMap>

	<insert id="register">
		insert into member (id, pw, email, name) values
		(#{id}, #{pw}, #{email}, #{name})
	</insert>

	<select id="CheckEmail" resultType="int">
		select count(*) from member
		where email = #{email}
	</select>

	<select id="CheckID" resultType="int">
		select count(*) from member
		where id = #{id}
	</select>

	<select id="CheckUserByID" resultType="int">
		select count(*) from
		member where id = #{id} and pw = #{pw}
	</select>

	<select id="CheckUserByEmail" resultType="int">
		select count(*) from
		member where email = #{id} and pw = #{pw}
	</select>

	<select id="MailEmail" resultMap="memberResult"> 
		select * from member where
		email=#{id}
	</select>

	<select id="MailID" resultMap="memberResult">
		select * from member where
		id=#{id}
	</select>
	
	<update id="updatePw">
		update member set pw = #{pw} where id = #{id}
	</update>
</mapper>